<MudNavMenu Class="mud-toolbar-dense" Color="Color.Darken1" Dense="true">
    <MudNavLink OnClick="@(() => navigateToRoute(Classes.Bugs.URL_VIEW))" Href="@Classes.Bugs.URL_VIEW">
        View
    </MudNavLink>
    <MudNavGroup Title="Account" Expanded="false">
        // TODO - redirect to profile edit
        <MudNavLink Href="/">Edit Profile</MudNavLink>
    </MudNavGroup>
</MudNavMenu>

@code {
    [Parameter] public EventCallback<string> CloseDrawer { get; set; }

    private void navigateToRoute(string url)
    {
        NavManager.NavigateTo(url);
        CloseDrawer.InvokeAsync("");
    }
}